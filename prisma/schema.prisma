generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id      Int    @id @default(autoincrement())
    email   String @unique
    name    String
    age     Int?

    posts Post[]
    @@map("users")
  }

  model Post {
    id        Int @id @default(autoincrement())
    title     String
    published Boolean @default(true)
    body      String @db.Text
    authorId  Int
    author    User @relation(fields: [authorId], references: [id])

    @@map("posts")
  }